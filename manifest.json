{
  "manifest_version": 3,
  "name": "Scroll Position Saver",
  "version": "1.0.0",
  "description": "Remembers scroll position after reloads and back/forward navigation. Great for long docs, GitHub, Reddit, and forums.",
  "permissions": ["storage"],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scroll Position Saver"
  }
}
